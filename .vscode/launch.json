    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "env": {
                "REDIS_URL":"redis://localhost:6379/0"
            },
            "args": [
                "server"
            ],
            "debuggerPort": "1234"
        },
        {
            "name": "Sidekiq",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/bundle",
            "args": [
                "exec",
                "sidekiq"
            ],
            "debuggerPort": "1235"
        }
    ],
    "compounds": [
        {
            "name": "Server + Sidekiq",
            "configurations": ["Server", "Sidekiq"]
        }
    ]
}